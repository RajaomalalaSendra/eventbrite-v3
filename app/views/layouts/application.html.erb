<!DOCTYPE html>
<html>
  <head>
    <title>Eventbrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style type="text/css">
      .col-centered{
         float: none;
        margin: 0 auto;
      }
    </style>
  </head>

  <body>
    <header>
      <div class="shadow p-1 mb-5 bg-success rounded">
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <a class="navbar-brand" href="/">EVENTBRITE</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <%if current_user%>
            <li class="nav-item active">
              <%= link_to "New Events", new_event_path, :class => "nav-link" %></a>
            </li>
            <li class="nav-item active">
              <%= link_to "My Profil", "/users/1", :method => :get,  :class => "nav-link" %></a>
            </li>
             <li class="nav-item active">
             <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => "nav-link" %>
            </li>
            <%else%>
            <li class="nav-item active">
              <a href="/users/sign_in", class="nav-link">Sign in</a>
            </li>
             <li class="nav-item active">
              <a href="/users/sign_up", class="nav-link">Sign up</a>
            </li>
            <li class="nav-item active">
              <a href="/users/new", class="nav-link">New user</a>
            </li>
            <%end%>
         </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </nav>
    </div>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
      <!--The jubmbotron-->
    <%= yield %>
    <script type="text/javascript" src="https://bootswatch.com/_vendor/popper.js/dist/umd/popper.min.js"></script>
    <script type="text/javascript" src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>
